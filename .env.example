# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control

# === API Keys ===
# OpenAI API key for LLM candidate generation
OPENAI_API_KEY=your-openai-api-key-here

# === Database Configuration ===
# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=annotations
DB_USER=annotator
DB_PASSWORD=change-this-secure-password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# === Redis Configuration ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# === Application Settings ===
# Environment: development, staging, production
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=info

# API server configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# === Security ===
# JWT secret for token generation (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# === Label Studio ===
LABEL_STUDIO_URL=http://localhost:8080
LABEL_STUDIO_API_KEY=

# === Ollama (Local LLM) ===
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# === Monitoring ===
# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# DataDog API key (optional)
DATADOG_API_KEY=

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# === Storage ===
# Local storage paths
DATA_DIR=./data
CACHE_DIR=./data/local/llm_cache
EXPORT_DIR=./data/exports
LOG_DIR=./logs

# === Feature Flags ===
ENABLE_AUTO_ACCEPT=true
AUTO_ACCEPT_MAX_RATE=0.3
ENABLE_WEBSOCKET=true
ENABLE_METRICS=true